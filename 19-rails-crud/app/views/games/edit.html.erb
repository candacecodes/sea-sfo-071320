<h1>Update game</h1>

<% if @game.errors.any? %>
	<ul>
	<% @game.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

<%= form_with model: @game, local: true do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.label :image_url %>
	<%= f.text_field :image_url %>

  <%= f.submit "Update Game" %>
<% end %>